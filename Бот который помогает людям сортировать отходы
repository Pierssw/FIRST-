import discord
from discord.ext import commands


bot = commands.Bot(command_prefix='!')

recyclable_items = ["plastic", "glass", "metal", "paper"]
compostable_items = ["food scraps", "biodegradable materials"]
landfill_items = ["plastic bags", "non-recyclable packaging", "ceramics"]

@bot.event
async def on_ready():
    print(f'Logged in as {bot.user.name}')

@bot.command(name='sort')
async def sort_waste(ctx, *, item):
    item = item.lower()
    category = ""

    if item in recyclable_items:
        category = "Recyclable waste"
    elif item in compostable_items:
        category = "Compostable waste"
    elif item in landfill_items:
        category = "Landfill waste"
    else:
        category = "Uncategorized"

    response = f"The item '{item}' belongs to the category: {category}"
    await ctx.send(response)


bot.run('')
